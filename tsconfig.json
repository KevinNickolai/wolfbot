{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [ "ES2020" ],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020",
		"types": [ "node" ],
		"rootDir": "./src/"
	},
	"display": "Node 14",
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"test/*",
		"test"
	],
	"include": [ "src/*.ts", "src/**/*.ts", "src/*.js", "src/**/*.js", "src/commands/*.js" ]
}
